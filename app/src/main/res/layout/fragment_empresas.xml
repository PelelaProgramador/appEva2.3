<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Empresas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="101dp"
            android:text="Mis Pedidos"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/bolsita"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bolsita"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="81dp"
            android:src="@drawable/bolsa_papel_delivery"
            app:layout_constraintBottom_toTopOf="@+id/LinkEmpresa2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            tools:srcCompat="@drawable/bolsa_papel_delivery" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="64dp"
            android:text="AÃºn no has realizado pedidos"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/LinkEmpresa2"
            app:layout_constraintStart_toStartOf="@+id/bolsita" />

        <Button
            android:id="@+id/LinkEmpresa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="213dp"
            android:text="Hacer Pedidos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/bolsita" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>